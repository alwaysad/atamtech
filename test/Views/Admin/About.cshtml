@using test.Models
@model test.Models.TableList
@{
    ViewBag.Title = "Project";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>About Us</h2>

<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>ABOUT US</th>
        <th>DELETE</th>
        <th>UPDATE</th>
        <th>DETAILS</th>



    </tr>
    @{ if (test.Language.Localization.Language == "Türkçe")
        {
            foreach (var x in Model.aboutTr)
            {
        <tr>

            <td>@x.id</td>
            <td>@x.aboutUs</td>
            <td><a href="/Admin/DeleteAbout/@x.id" class="btn btn-danger">Delete</a></td>
            <td><a href="/Admin/bringAbout/@x.id" class="btn btn-success">Update</a></td>
            <td><a href="#" class="btn btn-default">Details</a></td>





        </tr>
            }

        }
        else
        {
            foreach (var x in Model.aboutEn)
            {
<tr>

            <td>@x.id</td>
            <td>@x.aboutUs</td>
            <td><a href="/Admin/DeleteAbout/@x.id" class="btn btn-danger">Delete</a></td>
            <td><a href="/Admin/bringAbout/@x.id" class="btn btn-success">Update</a></td>
            <td><a href="#" class="btn btn-default">Details</a></td>




</tr>
            }

        }

    }




</table>
<a href="/Admin/CreateAbout/" class="btn btn-primary">New About Us</a>
