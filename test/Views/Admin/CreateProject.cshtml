@model test.Models.Project

@{
    ViewBag.Title = "CreateProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create Project</h2>

<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.title)
    @Html.TextBoxFor(x => x.title, new { @class = "form-control" })


    @Html.LabelFor(x => x.photoUrl)
    @Html.TextBoxFor(x => x.photoUrl, new { @class = "form-control" })

    @Html.LabelFor(x => x.photoUrl2)
    @Html.TextBoxFor(x => x.photoUrl2, new { @class = "form-control" })

    <br />
    @Html.LabelFor(x => x.content)
    @Html.TextAreaFor(x => x.content, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.content2)
    @Html.TextAreaFor(x => x.content2, new { @class = "form-control" })

    <span>Past: </span> @Html.RadioButtonFor(m => m.status, 0)
    <span> | Ongoing: </span> @Html.RadioButtonFor(m => m.status, 1)
    <span> | Future: </span> @Html.RadioButtonFor(m => m.status, 2)


    <br />
    <span> | Eng: </span> @Html.RadioButtonFor(m => m.language, false)
    <span> | Tr: </span> @Html.RadioButtonFor(m => m.language, true)

    <br />
    @Html.LabelFor(x => x.content)
    @Html.TextAreaFor(x => x.content, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Add Project</button>
</form>
