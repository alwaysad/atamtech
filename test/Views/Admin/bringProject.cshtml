@model test.Models.Project
@{
    ViewBag.Title = "bringProject";

}

<h2>Bring Project</h2>

@using (Html.BeginForm("UpdateProject", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.id)
    @Html.TextBoxFor(x => x.id, new { @class = "form-control", @readonly = "readonly" })

    <br />


    @Html.LabelFor(x => x.title)
    @Html.TextBoxFor(x => x.title, new { @class = "form-control" })



    @Html.Label("Status:0=past , 1=ongoing, 2=future")
    <br />
    @Html.LabelFor(x => x.status)
    @Html.TextBoxFor(x => x.status, new { @class = "form-control" })

    <br />
    @Html.Label("Turkish=true, English=false")
    <br />
    @Html.TextBoxFor(x => x.language, new { @class = "form-control" })

    <br />
    @Html.LabelFor(x => x.photoUrl)
    @Html.TextBoxFor(x => x.photoUrl, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.content)
    @Html.TextAreaFor(x => x.content, 15, 1, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Update Project</button>


}